#------------------------------------------------------------
# GAPS
# from https://github.com/Teiolass/rice/blob/master/.config/i3/config
## smart_gaps on
## smart_borders on
set $mode_gaps Gaps: (o) outer, (i) inner, (n) normal
set $mode_gaps_outer Outer Gaps: Use j/k (Shift for global)
set $mode_gaps_inner Inner Gaps: Use j/k (Shift for global)
set $mode_gaps_normal Normal mode a/0
set $mode_borde Border: j/k
bindsym $mod+q mode "$mode_gaps"
gaps inner 6
#gaps outer 30

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym n      mode "$mode_gaps_normal"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_normal" {
        bindsym a exec "i3-msg gaps inner current set 20 && i3-msg gaps outer current set 30"
        bindsym 0 exec "i3-msg gaps inner current set 0 && i3-msg gaps outer current set 0"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym k  gaps inner current plus 5
        bindsym j gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+k  gaps inner all plus 5
        bindsym Shift+j gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym k  gaps outer current plus 5
        bindsym j gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+k  gaps outer all plus 5
        bindsym Shift+j gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
